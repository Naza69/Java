<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.nazacalc.HelloController">

    <padding>
        <Insets bottom="40" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>

    <TextField fx:id="myTextField" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3"/>
    <Button text="1" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#OneButton" prefWidth="50" prefHeight="50"/>
    <Button text="2" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#TwoButton" prefWidth="50" prefHeight="50"/>
    <Button text="3" GridPane.columnIndex="2" GridPane.rowIndex="1" onAction="#ThreeButton" prefWidth="50" prefHeight="50"/>
    <Button text="4" GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#FourButton" prefWidth="50" prefHeight="50"/>
    <Button text="5" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#FiveButton" prefWidth="50" prefHeight="50"/>
    <Button text="6" GridPane.columnIndex="2" GridPane.rowIndex="2" onAction="#SixButton" prefWidth="50" prefHeight="50"/>
    <Button text="7" GridPane.columnIndex="0" GridPane.rowIndex="3" onAction="#SevenButton" prefWidth="50" prefHeight="50"/>
    <Button text="8" GridPane.columnIndex="1" GridPane.rowIndex="3" onAction="#EightButton" prefWidth="50" prefHeight="50"/>
    <Button text="9" GridPane.columnIndex="2" GridPane.rowIndex="3" onAction="#NineButton" prefWidth="50" prefHeight="50"/>
    <Button text="0" GridPane.columnIndex="1" GridPane.rowIndex="4" onAction="#ZeroButton" prefWidth="50" prefHeight="50"/>
    <Button text="+" GridPane.columnIndex="4" GridPane.rowIndex="1" onAction="#PlusButton" prefWidth="50" prefHeight="50"/>
    <Button text="-" GridPane.columnIndex="4" GridPane.rowIndex="2" onAction="#SustractionButton" prefWidth="50" prefHeight="50"/>
    <Button text="x" GridPane.columnIndex="4" GridPane.rowIndex="3" onAction="#MultiplicationButton" prefWidth="50" prefHeight="50"/>
    <Button text="/" GridPane.columnIndex="4" GridPane.rowIndex="4" onAction="#DivisionButton" prefWidth="50" prefHeight="50"/>
    <Button text="=" GridPane.columnIndex="2" GridPane.rowIndex="4" onAction="#EqualButton" prefWidth="50" prefHeight="50"/>
    <Button text="Borrar" GridPane.columnIndex="4" GridPane.rowIndex="0" onAction="#DeletelAllButton" prefWidth="50" prefHeight="50"/>
    <Button text="." GridPane.columnIndex="0" GridPane.rowIndex="4" onAction="#DotButton" prefWidth="50" prefHeight="50"/>



</GridPane>
